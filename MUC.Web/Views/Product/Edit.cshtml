@model MUC.Models.ViewModels.ProductVM

<form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Product" class="form">
    <div class="validation" asp-validation-summary="All"></div>
    <div class="title">Update Product</div>
    <div class="input-container ic1">
        <input asp-for="Product.Title" id="Title" class="input" type="text"  />
        <div class="cut"></div>
        <label asp-for="Product.Title" for="Title" class="placeholder">Product Name</label>
    </div>

    <div class="input-container ic1">
        <input asp-for="Product.Description" id="Description" class="input" type="text"  />
        <div class="cut"></div>
        <label asp-for="Product.Description" for="Description" class="placeholder">Description</label>
    </div>
    <div class="input-container ic1">
        <input asp-for="Product.Author" id="Author" class="input" type="text"  />
        <div class="cut"></div>
        <label asp-for="Product.Author" for="Author" class="placeholder">Author</label>
    </div>
    <div class="input-container ic1">
        <input asp-for="Product.Price" id="Price" class="input" type="text"  />
        <div class="cut"></div>
        <label asp-for="Product.Price" for="Price" class="placeholder">Price</label>
    </div>
    <div class="input-container ic1">
        <input asp-for="Product.ImgURL"  name="file" class="input" type="file"  />
        <div class="cut"></div>
        <label asp-for="Product.ImgURL"  >Image</label>
    </div>

    <div class="input-container ic2">
        <label asp-for="@Model.Product.CategoryId"></label>
        <select  asp-for="@Model.Product.Category.Name" asp-items="new SelectList(@Model.CategoryList.Select(i=> i.Text))">
            <option disabled selected>--Select Category</option>
        </select>
    </div>
    <br />
    <div class="input-container ic2">
        <button type="submit" class="button glow-effect">Update
            <svg class="glow-container">
                <rect pathLength="100" stroke-linecap="round" class="glow-blur"></rect>
                <rect pathLength="100" stroke-linecap="round" class="glow-line"></rect>
            </svg>
        </button>
        <a class="button glow-effect" asp-controller="Product" asp-action="Index">Back
            <svg class="glow-container">
                <rect pathLength="100" stroke-linecap="round" class="glow-blur"></rect>
                <rect pathLength="100" stroke-linecap="round" class="glow-line"></rect>
            </svg>
        </a>
    </div>
</form>

  
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }