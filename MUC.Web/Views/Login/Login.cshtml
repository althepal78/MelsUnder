@model MUC.Models.ViewModels.LoginModel
<div class="login-section">
    <form asp-action="Login" asp-controller="Login" method="post">
        <div class="validation" asp-validation-summary="All"> </div>
        <div class="title">Login</div>
        <div class="input-container ic1">
            <input asp-for="Email" id="Email" class="input" type="email" placeholder=" " />
            <label asp-for="Email" for="Email" class="placeholder">User Name</label>
        </div>
        <div class="input-container ic2">
            <input asp-for="Password" id="Password" class="input" type="password" placeholder=" " />
            <label asp-for="Password" for="Password" class="placeholder">Password</label>
        </div>
        <br />
        <button type="submit" class="button glow-effect">Login
            <svg class="glow-container">
                <rect pathLength="100" stroke-linecap="round" class="glow-blur"></rect>
                <rect pathLength="100" stroke-linecap="round" class="glow-line"></rect>
            </svg>
        </button>
        <a asp-controller="Customer" asp-action="Index" class="button glow-effect">
            Back
            <svg class="glow-container">
                <rect pathLength="100" stroke-linecap="round" class="glow-blur"></rect>
                <rect pathLength="100" stroke-linecap="round" class="glow-line"></rect>
            </svg>
        </a>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    } 