@using Microsoft.AspNetCore.Http
@using MUC.Utilities
@inject IHttpContextAccessor HttpContextAccessor

@*the nav is on the layout so we in the nav and class navbar*@
<div class="logo">
    <img src="/images/melysSmallLogo.jpg" class="logo" alt="brand logo" />
</div>
<div class="navbar-links" >
    <ul> 
        <li class="hl">
            <a class="nav-button" asp-controller="Customer"
               asp-action="Index"
               class="link"> Home  </a>
        </li>
        <li class="hl">
            <a asp-controller="Menu"
               asp-action="Index"
               class="link"> Daily Menu  </a>
        </li>
        @if (User.IsInRole(StaticDetails.Role_Admin))
        {
            <li  class="logout hl">
                <a asp-controller="Login"
                   asp-action="Logout"
                   class="link">Log Out</a>
            </li>

            <li class="special"  data-special>
                <div class="dropdown information-grid" data-dropdown>
                    <button data-dropdown-button  href="#">Dashboard &gt;</button>

                    <div class="dropdown-menu">
                        <div class="dropdown-links">
                            <a asp-controller="Category"
                               asp-action="Index">Category &gt;</a>

                            <a asp-controller="Product"
                               asp-action="Index">Food/Drinks &gt;</a>

                            <a asp-controller="Menu"
                               asp-action="Index">Menu Creater &gt;</a>
                        </div>
                    </div>
                </div>
            </li>
        }
        else
        {
            <li class="hl">
                <a asp-controller="Login"
                   asp-action="Login"
                   class="link"> Login</a>
            </li>
        }
    </ul>
</div>

<div class="hamburger">
    <button class="hamburger-button" aria-controls="primary-navigation" aria-expanded="false">
        <svg stroke="var(--button-color)" fill="none" class="hamburger-svg" viewBox="-15 -10 120 120" width="50">
            <path class="line" stroke-width="10" stroke-linecap="round" stroke-linejoin="round" d="m 20 40 h 60 a 1 1 0 0 1 0 20 h -60 a 1 1 0 0 1 0 -40 h 30 v 80">
            </path>
        </svg>
    </button>
</div>

