@model IEnumerable<Category>

<div>
    <div>
        <div class="heading-items">
            <h2>Category List</h2>
            <a asp-controller="Category"
               asp-action="Create"
               class="button glow-effect">
                Create New Category
                <svg class="glow-container">
                    <rect pathLength="100" stroke-linecap="round" class="glow-blur"></rect>
                    <rect pathLength="100" stroke-linecap="round" class="glow-line"></rect>
                </svg>
            </a>
        </div>

    </div>
    <table>
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        <a class="table-link" asp-controller="Category" asp-action="Details" asp-route-id="@obj.Id">@obj.Name
                        
                        </a>
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div role="group">
                            <a class="button glow-effect" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"> 
                                Edit
                                <svg class="glow-container">
                                    <rect pathLength="100" stroke-linecap="round" class="glow-blur"></rect>
                                    <rect pathLength="100" stroke-linecap="round" class="glow-line"></rect>
                                </svg>
                             </a>
                            <a class="button glow-effect" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">  Delete
                                <svg class="glow-container">
                                    <rect pathLength="100" stroke-linecap="round" class="glow-blur"></rect>
                                    <rect pathLength="100" stroke-linecap="round" class="glow-line"></rect>
                                </svg>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>