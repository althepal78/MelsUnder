@model MUC.Models.ViewModels.LoginModel
<div>
    <form asp-action="Login" asp-controller="Login" class="mt-10" method="post">
        <div class="validation" asp-validation-summary="All"> </div>
        <section id="login"
                 class="flex min-h-80  items-center justify-center bg-[var(--bg-color)]">

            <div class="w-96 rounded-md bg-[var(--bg-color)] p-6 shadow-md shadow-[var(--accent)]">
                <h1 class="text-center text-3xl font-semibold text-[var(--accent)]">
                    <i class="fa-solid fa-user mr-2"></i>Login
                </h1>
                <hr class="h1 mt-3 w-full border-[var(--accent)]" />
                <div class="mt-3">
                    <label asp-for="Email" class="mb-2 block text-base">Username</label>
                    <input asp-for="Email"
                           type="email"
                           class="texte-base -x-2 w-full border py-1 focus:border-gray-600 focus:outline-none focus:ring-0"
                           placeholder="Enter Username" />
                </div>
                <div class="mt-3">
                    <label asp-for="Password" class="mb-2 block text-base">Password</label>
                    <input asp-for="Password"
                           type="password"
                           class="texte-base -x-2 w-full border py-1 focus:border-gray-600 focus:outline-none focus:ring-0"
                           placeholder="Enter Password" />
                </div>
                <div class="mt-5 flex items-center justify-between">
                    <button type="submit"
                            class="w-2/5 rounded-md border bg-[var(--accent)] p-2 text-center text-2xl text-[var(--bg-color)] duration-200 hover:border-[var(--accent)] hover:bg-[var(--bg-color)] hover:p-2 hover:text-[var(--accent)]">
                        Login
                    </button>

                    <a asp-controller="Customer" asp-action="Index"
                      class="w-2/5 rounded-md border bg-[var(--accent)] p-2 text-center text-2xl text-[var(--bg-color)] duration-200 hover:border-[var(--accent)] hover:bg-[var(--bg-color)] hover:p-2 hover:text-[var(--accent)]">
                        Back
                    </a>
                </div>
            </div>
        </section>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    } 